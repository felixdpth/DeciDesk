          <h4>Volume of Sales</strong></h4>
          <h2 style="font-size: 1.5rem"> <strong class="highlight text-center"> <%= @sales.count %> </strong></h2>
        </div>
      </div>

      <div class="card-dash">
        <p class="highlight-blue">Top 5 - Sales ðŸ’¶</p>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
