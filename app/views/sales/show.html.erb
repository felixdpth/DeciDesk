        <p class="highlight-blue">Monthly Sales</p>
        <%= column_chart @annual_sales, prefix: "â‚¬", thousands: ",", download: true %>
      </div>

      <div class="card-dash">
        <p class="highlight-blue">Monthly Sales Volume</p>
        <%= column_chart @sales_volume, download: true %>
      </div>

    </div>

    <div class="d-flex flex-column" style="max-width: 53%">
      <div class="d-flex justify-content-between">

        <div class="card-dash p-4 text-center" style="min-width: 45%; color: #999">
          <h4>Total Sales</h4>
          <h2 style="font-size: 1.5rem"> <strong class="highlight text-center"> â‚¬ <%= number_with_delimiter(@total_sales, :delimiter => ',') %></strong></h2>
