                <th scope="col"><strong class="highlight">Date</strong></th>
                <th scope="col"><strong class="highlight">Amount</strong></th>
              </tr>
            </thead>
            <tbody>
              <% @top5sales_credit.each_with_index do |line, index| %>
                <tr>
                  <th scope="row" span class="badge bg-secondary" style= "color: white"><%= index + 1 %></th>
                  <td><%= line.ecriture_lib %></td>
                  <td><%= line.ecriture_date %></td>
