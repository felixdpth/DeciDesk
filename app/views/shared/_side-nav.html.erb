<div class="sidenav">
  <div class="flex-container">
    <%= link_to root_path, class: "text-muted" do %>
      <%= image_tag "logo-white.png" %>
    <% end %>
    <div class="dd-title">Decidesk</div>
  </div>

  <div class="nav-links">

    <p>
      <%= link_to reports_path do %>

        <i class="fas fa-home pr-10"></i> <span>Dashboard</span>
      <% end %>
    </p>

    <p>
      <%= link_to report_treasury_path(@report) do %>
        <i class="fas fa-piggy-bank pr-10"></i> <span class="<%= 'active' if controller.controller_name == 'treasuries' && controller.action_name == "show" %>">Treasury</span>
      <% end %>
    </p>

    <p>
      <%= link_to report_sales_path(@report) do %>
        <i class="fas fa-cart-plus pr-10"></i> <span class="<%= 'active' if controller.controller_name == 'sales' && controller.action_name == "show" %>">Sales</span>
      <% end %>
    </p>

    <p>
      <%= link_to report_expenditures_path(@report) do %>
        <i class="fas fa-coins pr-10"></i> <span class="<%= 'active' if controller.controller_name == 'expenditures' && controller.action_name == "show" %>">Expenditures</span>
      <% end %>
    </p>
    <div class="separator">
      <p>
        <%= link_to edit_user_registration_path do %>
          <i class="fas fa-user-edit pr-10 line"></i> Edit profile
        <% end %>
      </p>
      <p>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt pr-10"></i> Log out
        <% end %>
      </p>
    </div>
  </div>

</div>

