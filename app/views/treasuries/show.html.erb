<div class="container">

  <div class="dash-nav">
    <p><%= link_to "Treasury", "./treasury" %></p>
    <p><%= link_to "Advise", "./advise" %></p>
    <p><%= link_to "Notes", "./notes" %></p>
    <p><%= link_to "All Transaction", "./transactions" %></p>
    <select class="form-select" aria-label="Default select example">
      <option selected>Choose View</option>
      <option value="1">Monthly</option>
      <option value="2">Weeekly</option>
    </select>
  </div>

  <div class="row d-flex justify-content-center mb-5 mt-5">
    <h4>Your cash is at <strong class="highlight"><%= @balance_last_day.to_i %> ‚Ç¨ </strong>on <%= @treasury_last_day.ecriture_date.strftime("%d %B %Y") %> </h4>
  </div>

  <div class="row d-flex justify-content-around">
    <div class="col-lg-7 card-dash">
       <%= column_chart Line.monthly_cash, prefix: "‚Ç¨", thousands: ",", download: true, title: "Monthly Cash" %>
    </div>

    <div class="col-lg-7 card-dash">
       <%= column_chart Line.weekly_cash, prefix: "‚Ç¨", thousands: ",", download: true, title: "Weekly Cash" %>
    </div>

      <div class="divTable">
         <div class="divRow"> How's your cash on the period ? </div>
         <div class="headRow">
           <div  class="divCell"><strong class="highlight">Date</strong></div>
           <div  class="divCell"><strong class="highlight">Amount</strong></div>
         </div>

         <% Line.monthly_cash.each do |key, value| %>
           <div class="divRow">
             <div class="divCell text-left"> <%= key.strftime("%b %Y") %></div>
             <div class="divCell"> <%= value %> ‚Ç¨ </div>
           </div> 
         <% end %>
      </div>
    </div>
  </div>

        <div class="divTable">
