           <div  class="divCell"><strong class="highlight">Date</strong></div>
           <div  class="divCell"><strong class="highlight">Amount</strong></div>
         </div>

         <% @top5_debit.each do |line| %>
           <div class="divRow">
             <div class="divCell"><%= line.compte_num %></div>
