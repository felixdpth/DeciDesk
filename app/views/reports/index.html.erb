<%= render 'shared/navbar' %>

<div class="container">
  <div class="container-index">
    <div class="row">
      <div class="col-lg-4">
        <div class="card-dash">
          <h3 class="main-title"><strong class="highlight">ðŸ‘‹ Welcome to Decidesk !</strong></h3>
          <p style="text-align: justify">Tired of Excel? Need to quickly understand your business? Well you've come to the right place. Load your FEC file and let's get this party started!</p>

          <br>
          <div class="dropdown-divider"></div>
          <br>

          <h3 class="text-center mb-5"><strong class="highlight">Your activity on DeciDesk</strong></h3>
          <div class="row mt-3">
            <div class="col text-center"><h3><strong class="highlight-blue"><%= number_with_delimiter(@current_user.reports.all.count, :delimiter => ',') %></strong></h3></div>
            <div class="col text-center"><h3><strong class="highlight-blue"><%= number_with_delimiter(@current_user.lines.all.count, :delimiter => ',') %></strong> </h3></div>
          </div>
          <div class="row mt-3">
            <div class="col text-center"><p>Reports uploaded</p></div>
            <div class="col text-center"><p>Lines Analysed</p></div>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card-dash h-523">
          <h3 class="text-center"><strong class="highlight">Upload a new FEC for analysis</strong></h3>
          <div>
            <%= render 'reports/form' %>
          </div>
          <br>
          <div class="dropdown-divider"></div>
          <br>
          <h3 class="text-center"><strong class="highlight">All your reports</strong></h3>
          <div>
            <div class="card-body justify-content-center pd100">
              <% if @current_user.reports %>
                <% @current_user.reports.all.each do |report| %>
                  <div class="divRow d-flex justify-content-around">
                    <p class="divCell w200 text-left"><%= report.name %></p>
                    <p class="divCell"><%= report.created_at.strftime("%b %Y") %></p>
                    <p class="divCell" style="width:30px">
                      <%= link_to report_path(report.id) do %>
                        <i class="fas fa-search"></i>
                      <% end %>
                    </p>
                    <p class="divCell " style="width:30px">
                      <%= link_to report_path(report.id), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fas fa-trash-alt"></i>
                    <% end %>
                    </p>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
 </div>
</div>
